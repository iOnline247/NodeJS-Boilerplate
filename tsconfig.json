{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2018",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "alwaysStrict": true,
        "emitBOM": false,
        "incremental": true,
        "moduleResolution": "Node",
        "outDir": "dist",
        "removeComments": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}